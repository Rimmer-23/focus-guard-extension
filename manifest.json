{
  "manifest_version": 3,
  "name": "Focus Guard",
  "version": "2.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/shield.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}